<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:padding="10dp"
        android:gravity="start"
        android:orientation="vertical"
        android:id="@+id/linearpersonal"
        android:background="#42A5F5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="35sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text="Đức Nhân"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#FFF"
            android:id="@+id/Calling"
            android:textSize="20sp"
            android:text="Đang gọi...."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <ImageView
        android:scaleType="centerInside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/taskCall"
        android:layout_below="@id/linearpersonal"
        android:background="@drawable/noavt">

    </ImageView>
    <RelativeLayout
        android:id="@+id/taskCall"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/btnStartCall"
            android:layout_alignParentStart="true"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/btn_end_call" />

        <TextView
            android:id="@+id/btnStatusCall"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_toStartOf="@id/btnEndCall"
            android:layout_toEndOf="@+id/btnStartCall"
            android:text="Cuộc gọi Video"
            android:textAlignment="center"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/btnEndCall"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/btn_end_call" />
    </RelativeLayout>
</RelativeLayout>