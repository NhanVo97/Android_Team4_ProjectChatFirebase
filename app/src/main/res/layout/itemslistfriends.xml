<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imAvtPrv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:textColor="#333"
        android:id="@+id/tvNamePrv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Đức Nhân"
        app:layout_constraintStart_toEndOf="@+id/imAvtPrv"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:textColor="#FFF"
        android:background="@drawable/accept"
        android:id="@+id/btnEditFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="Bạn bè"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTrangthaiPrv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:text="Tôi đang dùng chat365"
        android:textColor="#888"
        app:layout_constraintStart_toEndOf="@+id/imAvtPrv"
        app:layout_constraintTop_toBottomOf="@+id/tvNamePrv" />
</android.support.constraint.ConstraintLayout>