<LinearLayout android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_weight="0.7"
        android:background="@drawable/borderedittext"
        android:id="@+id/panelNameGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:padding="15dp"
            android:src="@drawable/add"
            android:id="@+id/btnUpHinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="#00000000"
            android:padding="10dp"
            android:id="@+id/edNameGroup"
            android:hint="Tên nhóm của bạn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <RelativeLayout
        android:layout_weight="8.6"
        android:id="@+id/panelAdd"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <RelativeLayout
            android:id="@+id/panelLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/borderright">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/panelTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borderedittext">

                    <EditText
                        android:id="@+id/edSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:hint="Tìm bạn bè trong danh sách"
                        android:padding="10dp" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcListFriend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>


        </RelativeLayout>
        <RelativeLayout
            android:background="#FFF"
            android:layout_toRightOf="@id/panelLeft"
            android:id="@+id/panelRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:padding="10dp"
                android:id="@+id/topRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:text="SELECTED"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="18dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/totalSelected"
                    android:layout_alignParentEnd="true"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/lvSelected"
                android:layout_below="@id/topRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

    </RelativeLayout>
    <Button
        android:layout_weight="0.7"
        android:id="@+id/btnCreate"
        android:text="TẠO"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:background="#2f80ed"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</LinearLayout>